				<th>Tên đăng nhập</th>
				<th>Tên đầy đủ</th>
				<th>Avatar</th>
				<th>Quyền</th>
				<th class="fit"></th>
			</tr>
		</thead>
		<tbody>
		</tbody>
	</table>
	<partial name="_Pagination" />
</div>


<partial name="_AddUser" />

@section script
{
	<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
