									<div class="mb-3">
										<label asp-for="CategoryId" class="control-label ml-2">Thể loại sản phẩm</label>
										<select asp-for="CategoryId" class="form-control select2" data-placeholder="Choose ...">
											@*<option>Chọn một thể loại</option>*@
										</select>
										<span asp-validation-for="CategoryId" class="text-danger"></span>
									</div>
									<div class="mb-3">
										<label asp-for="Price" class="control-label ml-2">Giá nhập</label>
										<span asp-validation-for="Price" class="text-danger"></span>
										<div class="input-group mb-3">
											<div asp-for="Price" class="input-group-prepend">
												<span class="bg-success input-group-text text-white">VND</span>
											</div>
											<input type="text" asp-for="Price" class="form-control" aria-label="Giá nhập">
										</div>
									</div>

									<div class="mb-3">
										<label asp-for="PromoPrice" class="control-label ml-2">Giá Khuyến mãi</label>
										<span asp-validation-for="PromoPrice" class="text-danger"></span>
										<div class="input-group mb-3">
											<div class="input-group-prepend">
												<span class="bg-success input-group-text text-white">VND</span>
											</div>
											<input asp-for="PromoPrice" class="form-control" aria-label="Giá nhập" placeholder="Hãy nhập 0 nếu không giảm giá">
										</div>
									</div>
								</div>
							</div>
