@model dA.Data.AppProduct

<div id="Product_modal" class="modal fade" tabindex="-1" data-bs-backdrop="static" aria-labelledby="#exampleModalFullscreenLabel" aria-hidden="true">
	<div class="modal-dialog modal-fullscreen">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalFullscreenLabel">Trang thêm sản phẩm</h5>
				@*<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>*@
			</div>
			<div class="modal-body">
				<div class="row">
					<form id="ProductForm" method="post" enctype="multipart/form-data" multiple="multiple">
						<div class="col-md-12">

							<input asp-for="Id" type="hidden" class="form-control" />
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>
							<div class="row">
								<div class="col-md-9">
									<div class="mb-3">
										<label asp-for="Name" class="control-label ml-2">Tên sản phẩm</label>
										<input asp-for="Name" type="text" class="form-control" />
										<span asp-validation-for="Name" class="text-danger"></span>
									</div>

									<div class="mb-3">
										<label asp-for="Summary" class="control-label ml-2">Tóm tắt</label>
										<input asp-for="Summary" class="form-control" type="text" />
										<span asp-validation-for="Summary" class="text-danger"></span>
									</div>
									<div class="mb-3">
										<label asp-for="Description" class="control-label ml-2">Mô tả sản phẩm</label>
										<textarea class="form-control" asp-for="Description" type="text" rows="6"></textarea>
									</div>
								</div>
								<div class="col-md-3">

									<div class="mb-3">
										<label asp-for="DisplayOrder" class="control-label ml-2"></label>
										<input asp-for="DisplayOrder" class="form-control" type="number" />
										<span asp-validation-for="DisplayOrder" class="text-danger"></span>
									</div>

									<!--<div class="mb-3">
									<label asp-for="CategoryId" class="control-label ml-2 ml-2">Thể loại sản phẩm</label>
