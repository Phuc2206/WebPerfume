@model dA.Web.Areas.Admin.ViewModels.UserLoginVM
@{ Layout = null; }
<!DOCTYPE html>
<head>
	<title>Đăng nhập</title>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<!-- Bootstrap CSS -->
	<link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
	<div class="container">
		<div class="row">
			<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
				<div class="card card-signin my-5 rounded shadow p-3 mb-5 bg-white">
					<div class="card-body">
						<h5 class="card-title text-center">Đăng Nhập</h5>
						<form method="post">
							<div class="form-group">
								@if (TempData["Mesg"] != null)
								{
									<span class="text-danger small">@TempData["Mesg"]</span>
								}
								<input type="text" asp-for="Username" class="form-control p-4"
									   placeholder="Email hoặc số điện thoại" required>
								<span asp-validation-for="Username" class="text-danger small"></span>
							</div>
							<div class="form-group position-relative">
								<input type="password" asp-for="Password" class="form-control p-4"
									   placeholder="Mật khẩu" required>
								<span asp-validation-for="Password" class="text-danger small"></span>
							</div>
							<div class="form-check ">
								<input class="form-check-input" type="checkbox" asp-for="RememberMe">
								<label class="form-check-label user-select-none" asp-for="RememberMe">Giữ tôi luôn đăng nhập</label>
							</div>
							<div class="form-group">
								<button class="btn btn-lg btn-primary btn-block text-uppercase mt-3" type="submit" asp-action="Login" asp-controller="UserActivity">Đăng nhập</button>
							</div>
							@*<div class="form-group text-center">
								<a asp-controller="UserActivity" asp-action="ForgotPassword">Quên mật khẩu?</a>
							</div>*@
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
