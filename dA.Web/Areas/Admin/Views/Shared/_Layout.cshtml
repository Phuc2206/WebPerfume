
<!DOCTYPE html>
<html lang="en">
<head>
	<title>@ViewBag.Title</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<partial name="_CssInjection" />
	<!-- App Css-->
	@RenderSection("head", false)
	<style>
		.border-radius-0 {
			border-radius: 0px !important;
		}

		.list-group-item.active {
			z-index: 4;
			color: #fff;
			background-color: #6C757D;
			border-color: #6C757D;
		}

		.btn-outline-secondary:hover {
			z-index: 5;
			color: #fff !important;
		}

		.text-success {
			z-index: 5;
			color: #6C757D !important;
		}
	</style>
</head>
<body>
	<!-- Begin page  data-sidebar="dark" -->
	<div id="layout-wrapper">
		<partial name="_Header" />
		<!-- ========== Left Sidebar Start ========== -->
		<div class="vertical-menu">
			<button type="button" class="btn btn-sm px-3 font-size-16 header-item waves-effect vertical-menu-btn">
				<i class="fa fa-fw fa-bars"></i>
			</button>
			<partial name="_LeftSildebar" />
		</div>
		<!-- Left Sidebar End -->
		<!-- ============================================================== -->
		<!-- Start right Content here -->
		<!-- ============================================================== -->
		<div class="main-content">

			<div class="page-content">
				<div class="container-fluid">

					<!-- end row -->
					<div class="row">
						<div class="col-12">
							<div class="table-responsive">
								<div class="col-12">
									<div class="
                    page-title-box
                    d-flex
                    align-items-center
                    justify-content-between
                  ">
										<h4 class="mb-0">@ViewBag.Title</h4>
										<div class="page-title-right">
											<ol class="breadcrumb m-0">
												<li class="breadcrumb-item">
													<a href="javascript: void(0);">Admin</a>
												</li>
												<li class="breadcrumb-item active">@ViewBag.Title</li>
											</ol>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<div class="card">
								<div class="card-body">
									@RenderBody()

									<!-- end table-responsive -->
								</div>
							</div>
						</div>
					</div>
					<!-- end row -->

				</div> <!-- container-fluid -->
			</div>

			<!-- End Page-content -->
			<footer class="footer">
				<div class="container-fluid">
					<div class="row">
						<div class="col-sm-6">
							<script>
								document.write(new Date().getFullYear())
							</script> © Vũ Ngọc Phúc
						</div>
						<div class="col-sm-6">
							<div class="text-sm-end d-none d-sm-block">
								Crafted with <i class="mdi mdi-heart text-danger"></i> by <a href="#"
																	 target="_blank" class="text-reset">Glenn</a>
							</div>
						</div>
					</div>
				</div>
			</footer>
		</div>
		<!-- end main content-->

	</div>
	<!-- END layout-wrapper -->
	<partial name="_ChangePassword" model="null" />

	<!-- Right bar overlay-->
	<div class="rightbar-overlay"></div>

    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/Admin/assets/js/message.js" asp-append-version="true"></script>

	<partial name="_JsInjection" />
		@RenderSection("script", false)

</body>
</html>
