	<script>
		$(".list_price_item").click(function () {
			Swal.fire({
				icon: 'error',
				title: 'Oops...',
				text: 'Xin lỗi, chức năng này sẽ được cập nhật trong phiên bản sắp ra mắt!'
			});
		});
		$(".size_item").click(function () {
			Swal.fire({
				icon: 'error',
				title: 'Oops...',
				text: 'Xin lỗi, chức năng này sẽ được cập nhật trong phiên bản sắp ra mắt!'
			});
		});
		$(".list_category").click(function () {
			Swal.fire({
				icon: 'error',
				title: 'Oops...',
				text: 'Xin lỗi, chức năng này sẽ được cập nhật trong phiên bản sắp ra mắt!'
			});
		})
        $(".list_product_title_right").click(function () {
			Swal.fire({
				icon: 'error',
				title: 'Oops...',
				text: 'Xin lỗi, chức năng này sẽ được cập nhật trong phiên bản sắp ra mắt!'
			});
		})
	</script>
}