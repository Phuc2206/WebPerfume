@using dA.Web.common
@inject AppSystemEnv sysEnv
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - dA.Web</title>
	<link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
	<link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
	<link href="~/css/reset.css" rel="stylesheet" asp-append-version="true" />
	<link href="~/css/swiper-bundle.min.css" rel="stylesheet" />
	<link href="~/css/CssTrangChuClient.css" asp-append-version="true" rel="stylesheet" />

	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
		  integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
	@await RenderSectionAsync("head", false)
	<link href="~/Admin/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
</head>
<body>



	<div class="root">
		<partial name="_Header" />

		<div class="main mt-4">
			@RenderBody()
		</div>

		<footer>
            @if(sysEnv["Phone"] != null)
            {
                <link rel="phone" type="" href="@sysEnv["Phone"]" asp-append-version="true">
            }

            @if(sysEnv["BrandName"] != null)
            {
                <link rel="phone" type="" href="@sysEnv["BrandName"]" asp-append-version="true">
            } 
            @if(sysEnv["Address"] != null)
            {
                <link rel="phone" type="" href="@sysEnv["Address"]" asp-append-version="true">
            } 

			<div class="footer_container">
				<div class="footer_container-item d-flex">

					<div class="footer_container__item-left d-flex">
						<div class="group_list_footer">
							<ul class="list_footer">
								<li class="list_footer_item active">FIND A STORE</li>
								<li class="list_footer_item active">BECOME A MEMBER</li>
								<li class="list_footer_item active">SIGN UP FOR EMAIL</li>
								<li class="list_footer_item active">SEND US FEEDBACK</li>
							</ul>
						</div>
						<div class="group_list_footer">
							<ul class="list_footer">
								<li class="list_footer_item active">GET HELP</li>
								<li class="list_footer_item">Order Status</li>
								<li class="list_footer_item">Returns</li>
								<li class="list_footer_item">Payment Options</li>
								<li class="list_footer_item">Contact Us</li>
							</ul>
						</div>
						<div class="group_list_footer">
							<ul class="list_footer">
								<li class="list_footer_item active">ABOUT</li>
								<li class="list_footer_item">@sysEnv["BrandName"]</li>
								<li class="list_footer_item">@sysEnv["Address"]</li>
								<li class="list_footer_item">Liên Hệ : @sysEnv["Phone"]</li>
							</ul>
						</div>
					</div>

					<div class="footer_container__item-right">
						<div class="group_icon">
							<ul class="list_icon d-inline-flex">
								<li class="list_icon_item">
									<a class="icon_link" href="">
										<i class="fab fa-facebook icon"></i>
									</a>
								</li>
								<li class="list_icon_item">
									<a class="icon_link" href="">
										<i class="fab fa-instagram icon"></i>
									</a>
								</li>
								<li class="list_icon_item">
									<a class="icon_link" href="">
										<i class="fab fa-twitter icon"></i>
									</a>
								</li>
								<li class="list_icon_item">
									<a class="icon_link" href="">
										<i class="fab fa-youtube icon"></i>
									</a>
								</li>
							</ul>
						</div>
					</div>

				</div>
				<div class="footer_container-item line">
					<div class="footer_container__item-left d-flex ">
						<span>
							Vietnam
							© 2021 PT.Perfume, Inc. All Rights Reserved
						</span>
					</div>
					<div class="footer_container__item-right">

					</div>
				</div>
			</div>
		</footer>
	</div>




	<script src="~/lib/jquery/jquery.js"></script>
	<script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
	<script src="~/lib/font-awesome/js/all.js"></script>
	<script src="~/js/scrollreveal.min.js"></script>
	<script src="~/js/swiper-bundle.min.js"></script>
	<script src="~/js/JsTrangChuClient.js" asp-append-version="true"></script>
    <script src="~/Admin/assets/js/Contact/Contact.js"></script>
	<script src="~/Admin/assets/libs/sweetalert2/sweetalert2.min.js"></script>
	<script src="~/Admin/assets/js/pages/sweet-alerts.init.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
