@section head{

	<link href="~/css/DetailProduct.css" rel="stylesheet" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
	<link href="~/css/GioHang.css" rel="stylesheet" asp-append-version="true" />
}
@model IEnumerable<dA.Web.ViewModels.ShoppingCartViewModel>
<div class="content mt-5">
	<section class="content_item grid p_l_r_150">
		<div class="shoppingcart_left">
			<div class="tilte">Bag</div>
			@if (Model.Count() > 0)
			{
				<div class="mt-3">
					@foreach (var item in Model)
					{
						<a class="item-shoppingcart">
							<img src="~/Images/Product/@item.UrlPicture"
								 alt="" class="item-shoppingcart-left">
							<div class="item-shoppingcart-right">
								<div class="item-shoppingcart-right-infocart">
									<h6>@item.Name</h6>
									<span class="Money-item" data-price="@item.PriceProduct">@item.PriceProduct?.ToString("#,###đ")</span>
								</div>
								<div class="item-shoppingcart-right-color chumaunhat mt-1">
									Grey Fog/Summit White/Smoke Grey/Black
								</div>
								<div class="item-shoppingcart-right-QualitySize chumaunhat mt-1">
									<span>
										<label for="">Size </label>
										<select data-id="@item.Id" class="list-size np-form-control chumaunhat" name="Name">
											<option value="@item.Size"> @item.Size</option>
										</select>
									</span>
									<span>
										<label for="quantity">Quantity </label>
										<select  data-id="@item.Id" class="list-quantity np-form-select chumaunhat" name="Quantity" id="quantity">
											<option value="@item.Quantity"> @item.Quantity</option>
											<option value="2">2</option>
											<option value="3">3</option>
											<option value="4">4</option>
											<option value="5">5</option>
											<option value="6">6</option>
											<option value="7">7</option>
											<option value="8">8</option>
											<option value="9">9</option>
											<option value="10">10</option>
										</select>
									</span>
								</div>
								<div class="item-shoppingcart-right-action">
									<span class="chumaunhat removeCart " data-id="@item.Id">
										Remove
									</span>
								</div>
							</div>
						</a>
					}

				</div>
			}
			@*else
			{
				<div>Chưa có sản phẩm nào cho giỏ hàng của bạn</div>
			}*@

		</div>


		<div class="shoppingcart_right mt-3">
			<div class="tilte">Summary</div>

			<div class="shoppingcart_right_item d-flex mt-5">
				<div class="text shoppingcart_right_item_left">
					Tạm tính
				</div>
				<span class="text right TmpSumMoneyProduct">
					0đ
				</span>
			</div>
			<div class="shoppingcart_right_item d-flex">
				<div class="text shoppingcart_right_item_left ">
					Giao hàng & Xử lý Ước tính
				</div>
				<span class="text right priceShip">
					0₫
				</span>
			</div>
			<div class="shoppingcart_right_item d-flex line-top mt-5">
				<div class="text shoppingcart_right_item_left">
					Tổng
				</div>
				<span class="text right indam SumMoneyProduct">
					0đ
				</span>
			</div>
			@if (User.Identity.IsAuthenticated)
			{
				<div class="shoppingcart_checkout mt-2">
					<a type="submit" class="btn" asp-action="CheckOutMenber" asp-controller="Checkout">Checkout</a>
				</div>
			}
			else
			{
				<div class="shoppingcart_checkout mt-5">
					<a type="submit" class="btnCheckOut btn" asp-action="CheckOutGuest" asp-controller="Checkout">Hoàn tất</a>
				</div>
				<div class="shoppingcart_checkout mt-2">
					<a type="submit" class="btn" asp-action="CheckOutMenber" asp-controller="Checkout">Đăng nhập</a>
				</div>
			}
		</div>
	</section>
</div>

@section Scripts{
	<script src="~/Admin/assets/js/ShoppingCart/ShoppingCart.js" asp-append-version="true"></script>
	<script src="~/Admin/assets/js/ShoppingCart/GetInfoProduct.js" asp-append-version="true"></script>
}